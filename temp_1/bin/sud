THE_URL="${1}"

umask 137

TEMP_FILE_CACHE="/var/tmp/safe_web_path_site"
DEST_FILE_PATH="${2}"

#if [[ ( $(echo "${SITE_NAME}" | grep -ocE "[[:punct:]]{1}$" | grep -oE -m 1 "[0-9]+" ) -ge 1 ) ]] ; then
#                declare -i SOME_SITE_LENGTH=$(echo -n "${1}" | wc -c | grep -oE -m 1 "[0-9]+")
#                wait ;
#                SOME_SITE_LENGTH=$((${SOME_SITE_LENGTH}-1))
#                wait ;
#                SITE_NAME=${1:0:$SOME_SITE_LENGTH}
#fi

function cleanup() {
if [[ ( -e ${TEMP_FILE_CACHE} ) ]] ; then rm -f ${TEMP_FILE_CACHE} 2>/dev/null ; wait ; fi ;
if [[ ( -e "${TEMP_FILE_CACHE}" ) ]] ; then rm -f "${TEMP_FILE_CACHE}" 2>/dev/null ; wait ; fi ;
}

trap 'cleanup ; wait ; exit 1 ;' SIGKILL ;
trap 'cleanup ; wait ; exit 1 ;' SIGQUIT ;
trap 'cleanup ; wait ; exit 1 ;' SIGHUP ;
trap 'cleanup ; wait ; exit 1 ;' SIGABRT ;
trap 'cleanup ; wait ; exit 1 ;' SIGINT ;
trap 'cleanup ; wait ; exit 1 ;' SIGTERM ;

HEADER_HOST=$(echo "${THE_URL}" | grepdns -m 1 )

HEADER_TYPE=$(\curl --user-agent "SUD/1.1" --url ${THE_URL} --retry 1 --show-error --max-redirs 0 --header "Host: ${THE_URL}" --header "Dnt: 1" --header "Connection: close" -j -L --ipv4 -s -S -I | grep -oE "[T]{1}[y]{1}[p]{1}[e]{1}[:]{1}[[:space:]]+[[:print:]]+")
HEADER_TYPE="${HEADER_TYPE:6}"
echo "Host: ${HEADER_HOST}"
echo "Accept: ${HEADER_TYPE}"
exit 0;
\curl --user-agent "SUD/1.1" --url ${THE_URL} -o "${TEMP_FILE_CACHE}" --retry 1 --show-error --max-redirs 2 --header "Dnt: 1" --header "Connection: close" -j -L --ipv4 -s -S ; wait ;

if [[ !( -e "${TEMP_FILE_CACHE}" ) ]] ; then 
echo "# FAILED" ;
exit 0;
else
clamscan --no-summary -i -r --detect-pua=no --remove=yes --tempdir=/var/tmp "${TEMP_FILE_CACHE}"
if [[ ( $? -gt 1 ) ]] ; then exit 1 ; fi ;
clamscan --no-summary -r --detect-pua=yes --remove=no --tempdir=/var/tmp "${TEMP_FILE_CACHE}"
fi ;

mv -f "${TEMP_FILE_CACHE}" "${DEST_FILE_PATH}"

exit 0;
