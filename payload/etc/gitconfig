[http]
	sslVerify = true
	sslVersion = tlsv1.2
	extraHeader = DNT: 1
	cookieFile = ~/.git_http_cookies

[color "diff"]
	new = green
	old = red
	newmoved = brightgreen
	oldmoved = brightred
	context = white
	meta = magenta
	frag = yellow
	func = brightyellow

[color "branch"]
	current = cyan
	remote = red
	upstream = yellow
	local = green
	plain = white

[color "decorate"]
	grafted = white
	HEAD = cyan
	branch = green
	remoteBranch = magenta
	tag = yellow

[core]
	protectNTFS = true
	protectHFS = true
	fsyncObjectFiles = true
	trustctime = false
	logAllRefUpdates = true
	warnAmbiguousRefs = true
	editor = nano -L
	safecrlf = true
	compression = 9
	loosecompression = 9
	whitespace = space-before-tab,blank-at-eol,cr-at-eol
	filemode = true
	precomposeunicode = true
	excludesfile = ~/.gitignore_global

[hooks]
	allowcolor = true
	forcecommittest = true

[checkout]
	defaultRemote = origin

[commit]
	status = true

[status]
	branch = true
	showStash = true
	submoduleSummary = true

[diff]
	context = 6
	renames = copies
	renameLimit = 127
	algorithm = histogram
	indentHeuristic = true
	wsErrorHighlight = old,new


[fetch]
	recurseSubmodules = true
	output = full
	prune = true

[pull]
	recurseSubmodules = true

[transfer]
	fsckObjects = true

[gui]
	encoding = utf8
	diffContext = 6
	matchTrackingBranch = true
	pruneDuringFetch = true

[merge]
	log = 50
	renormalize = true
	branchdesc = true
	verbosity = 3
	renames = true
	directoryRenames = true

[notes]
	mergeStrategy = cat_sort_uniq
	rewriteMode = cat_sort_uniq

[rebase]
	stat = true

[advice]
	ignoredHook = true

[rerere]
	enabled = true

[gpg]
	program = gpg2

[i18n]
	logOutputEncoding = utf-8

[filter "strings"]
	clean = strings -- %f
	smudge = strings -- %f
	required = true

[filter "archive"]
	clean = tar -xOf %f --no-same-owner
	smudge = tar -cf - --numeric-owner --bzip2 --posix %f
	required = true

[diff "archive"]
	textconv = tar -tvf - %f 2>/dev/null
	binary = true

[filter "archive-entry"]
	clean = cat $(dirname %f) 2>/dev/null | tar -xOf - --no-same-owner %f 2>/dev/null
	smudge = cat $(dirname %f) 2>/dev/null | tar -cf - --no-same-owner --bzip2 --posix %f @-
	required = true

[diff "archive-entry"]
    textconv = cat $(dirname %f) 2>/dev/null | tar -tvf - --no-same-owner --posix %f
    binary = true

[diff "config"]
	xfunction = "^(([[:alnum:][:punct:]]*){1}\\s*?[:=]{1}\\s*?){1}\\s*"

[diff "makefile"]
	xfunction = "^(([[:alnum:][:punct:]]+){1}:{1}){1}\\s*?"
	wordRegex = "([\\"\\']+[^\\'\\"]*?[\\'\\"]+)+|([$]?[(]+[^\\(\\)]*?[\\)]+)|(([[:alnum:]]|[^\\$\\"\\'\\(\\)[:space:][:cntrl:]])+)*|[[:space:]]+"

[diff "python"]
	xfunction = python
	wordRegex = python

[diff "php"]
	xfunction = php
	wordRegex = php

[diff "css"]
	xfunction = css
	wordRegex = css

[diff "html"]
	xfunction = html
	wordRegex = html
