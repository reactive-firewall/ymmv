function _exit()              # Function to run upon exit of shell.
{
    echo -e "${RED}Goodbye ${LOGNAME}${NC}" ;
}

else

function _exit()              # Function to run upon exit of shell.
{
    echo "Goodbye ${LOGNAME}"
}

fi

trap _exit EXIT
